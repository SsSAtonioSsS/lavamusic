{
  "name": "lavamusic",
  "version": "4.7.0",
  "description": "LavaMusic is a music bot for Discord, written in JavaScript using the Discord.js, Typescript, lavalink-client (Lavalink) library.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "start:dist": "bun dist/index.js",
    "db:push": "bunx drizzle-kit migrate --config=drizzle.config.ts",
    "db:drop": "bunx drizzle-kit drop --config=drizzle.config.ts",
    "db:generate": "bunx drizzle-kit generate --config=drizzle.config.ts",
    "db:studio": "bunx drizzle-kit studio --config=drizzle.config.ts",
    "db:push:sqlite": "bunx drizzle-kit migrate --config=drizzle.config.sqlite.ts",
    "db:drop:sqlite": "bunx drizzle-kit drop --config=drizzle.config.sqlite.ts",
    "db:generate:sqlite": "bunx drizzle-kit generate --config=drizzle.config.sqlite.ts",
    "db:studio:sqlite": "bunx drizzle-kit studio --config=drizzle.config.sqlite.ts",
    "i18n:sync": "bun run scripts/sync-locales.ts",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appujet/lavamusic.git"
  },
  "keywords": [
    "discord",
    "music",
    "bot",
    "lavalink",
    "lavalink-client",
    "lavamusic",
    "typescript",
    "bun"
  ],
  "author": "appujet",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/appujet/lavamusic/issues"
  },
  "homepage": "https://github.com/appujet/lavamusic#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.4",
    "@types/pg": "^8.16.0",
    "@types/signale": "^1.4.7",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@top-gg/sdk": "^3.1.6",
    "discord.js": "^14.25.1",
    "drizzle-orm": "^0.45.1",
    "genius-lyrics-api": "^3.2.1",
    "i18next": "^25.7.3",
    "lavalink-client": "^2.7.7",
    "node-system-stats": "^2.0.5",
    "pg": "^8.16.3",
    "signale": "^1.4.0",
    "topgg-autoposter": "^2.0.2",
    "tslib": "^2.8.1",
    "undici": "^7.16.0",
    "zod": "^4.2.1"
  },
  "signale": {
    "displayScope": true,
    "displayBadge": true,
    "displayDate": true,
    "displayFilename": true,
    "displayLabel": true,
    "displayTimestamp": true,
    "underlineLabel": true
  },
  "trustedDependencies": [
    "@swc/core"
  ]
}
